{
  "builds": [
    { "src": "*.php", "use": "@vercel/php" },
    { "src": "games/*.php", "use": "@vercel/php" },
    { "src": "projects/*.php", "use": "@vercel/php" },
    { "src": "login.php", "use": "@vercel/php" }
  ],
  "routes": [
    { "src": "/(.*)\\.php$", "dest": "/$1.php" },
    { "src": "/games/(.*)", "dest": "/games/$1" },
    { "src": "/projects/(.*)", "dest": "/projects/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
